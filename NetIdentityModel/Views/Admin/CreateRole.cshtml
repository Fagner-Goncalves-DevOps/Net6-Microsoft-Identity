@model NetIdentityModel.Models.AccountDto.CreateRoleDto
@{
    Layout = "_Layout";
}

@{
    ViewBag.Title = "Cria Nova Role";
}
<h3>Criar Role</h3>
<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Nome">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-success right" type="submit" style="margin-top:10px;width:20%">
                Criar Nova Role
            </button>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
